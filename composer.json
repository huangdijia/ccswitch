{
    "name": "huangdijia/ccswitch",
    "description": "",
    "type": "library",
    "autoload": {
        "psr-4": {
            "CCSwitch\\": "src"
        }
    },
    "bin": "ccswitch.php",
    "require": {
        "symfony/console": "^6.0||^7.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^2.0",
        "huangdijia/php-coding-standard": "^2.5"
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true
        }
    },
    "scripts": {
        "analyse": "@php vendor/bin/phpstan analyse --memory-limit=-1",
        "cs-fix": "@php vendor/bin/php-cs-fixer fix $1 --verbose"
    }
}
